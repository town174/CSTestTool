                    <DataGridTextColumn Header="环比(%) " Binding="{Binding LinkRelative}"></DataGridTextColumn>
                    <DataGridTextColumn  Header="去年同期" Binding="{Binding LastYear}"></DataGridTextColumn>
                    <DataGridTextColumn Header="同比(%)" Binding="{Binding YOY}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Background="{StaticResource ContainerBackground3}">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="15"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <TextBlock  Grid.ColumnSpan="2" FontSize="20" Foreground="White" Text="核磁科费用构成" Margin="20,10"></TextBlock>
            <Line Grid.Row="1" Grid.ColumnSpan="2" Stroke="White" StrokeThickness="2" Margin="20,5" X2="9999"></Line>
            <DataGrid Name="NrmDg" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" IsReadOnly="True"
