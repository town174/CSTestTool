            </Grid.ColumnDefinitions>
            <TextBlock  Grid.ColumnSpan="2" FontSize="20" Foreground="White" Text="功能科费用构成" Margin="20,10"></TextBlock>
            <Line Grid.Row="1" Grid.ColumnSpan="2" Stroke="White" StrokeThickness="2" Margin="20,5" X2="9999"></Line>
