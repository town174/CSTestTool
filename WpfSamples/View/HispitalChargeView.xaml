                <lvc:PieChart.Series>
                    <!--设置series类型为column,填充数据-->
                    <lvc:PieSeries Title="DR收入" Values="89" DataLabels="True" Fill="LightGreen"></lvc:PieSeries>
                    <lvc:PieSeries Title="检查收入" Values="6" DataLabels="True" Fill="Yellow"></lvc:PieSeries>
                    <lvc:PieSeries Title="体检收入" Values="5" Fill="Red"></lvc:PieSeries>
                </lvc:PieChart.Series>
            </lvc:PieChart>
            <DataGrid Name="FeatureDg" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" IsReadOnly="True"
