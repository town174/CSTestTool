                                <lvc:PieChart.Series>
                                    <!--设置series类型为column,填充数据-->
                                    <lvc:PieSeries Title="检查收入" Values="55" DataLabels="True" Fill="LightGreen"></lvc:PieSeries>
                                    <lvc:PieSeries Title="体检收入" Values="45" Fill="Red"></lvc:PieSeries>
                                </lvc:PieChart.Series>
                            </lvc:PieChart>
