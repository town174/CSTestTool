                        <Grid Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="5" Background="{StaticResource ContainerBackground3}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock  Grid.ColumnSpan="2" FontSize="20" Foreground="White" Text="放射科费用构成" Margin="20,10"></TextBlock>
                            <Line Grid.Row="1" Grid.ColumnSpan="2" Stroke="White" StrokeThickness="2" Margin="20,5" X2="9999"></Line>
                            <lvc:PieChart Name="chart7" Grid.Row="2" Margin="5,5" Foreground="White"
